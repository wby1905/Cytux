<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_background"
    tools:context=".Result">

    <View
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_1"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dp_120"
    android:translationZ="@dimen/dp_0"
    app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_120"
        android:translationZ="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
app:layout_constraintBottom_toTopOf="@id/final_score"
        app:layout_constraintStart_toStartOf="@id/final_score"
        app:layout_constraintEnd_toEndOf="@id/final_score"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMBO"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintBottom_toTopOf="@id/max_combo"
        app:layout_constraintStart_toStartOf="@id/max_combo"
        app:layout_constraintEnd_toEndOf="@id/max_combo"
        />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000000"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_30"
        android:textColor="#FFEB3B"
        android:layout_marginStart="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/rank"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:text="RANK\nMM"
        android:textStyle="bold"
        android:background="@drawable/rank"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:textColor="#FFEB3B"
app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/max_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="@dimen/sp_30"
        android:textColor="#FFEB3B"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0\t\t\t\t\t0\t\t\t\t\t0"
        android:textSize="@dimen/sp_15"
        android:textColor="#DDC982"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFECT\t\t\tGOOD\t\t\tMISS"
        android:textSize="@dimen/sp_10"
        android:textColor="#646464"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/count"
        />
    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="â–¶"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIN MENU"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintEnd_toStartOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        />
</androidx.constraintlayout.widget.ConstraintLayout>